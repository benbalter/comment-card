    <script src="/vendor/moment/min/moment.min.js"></script>
    <script>
      jQuery(function($){
        $(".timestamp").each(function(el, e){
          var el = $(e);
          var timestamp = moment.unix(el.data("timestamp"));
          el.text(timestamp.fromNow());
        })
      })
    </script>
